<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7_bg"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="16dp">

    <RelativeLayout
        android:id="@+id/rrHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/img_arrow_back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold_700"
                    android:text="Review Order"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_regular_400"
                    android:text="Delivery Details"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtSenderUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/lexend_regular_400"
                            android:text="Home :"
                            android:textColor="@color/color_999999"
                            android:textSize="13sp" />

                        <RelativeLayout
                            android:id="@+id/rrView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtSenderUserName"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:id="@+id/icSelected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/img_subtract" />

                            <View
                                android:id="@+id/icView"
                                android:layout_width="1dp"
                                android:layout_height="100dp"
                                android:layout_below="@id/icSelected"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/dashed_line" />

                            <ImageView
                                android:layout_below="@+id/icView"
                                android:id="@+id/icUnSelected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/img_blue" />

                        </RelativeLayout>


                        <com.google.android.material.textview.MaterialTextView
                            android:layout_toStartOf="@+id/icSenderRight"
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtSenderUserName"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_toEndOf="@+id/rrView"
                            android:fontFamily="@font/lexend_regular_400"
                            android:text="Geb. 571, CargoCity Süd, 60549 Frankfurt am Main, Germany"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:visibility="gone"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/txtSenderUserName"
                            android:id="@+id/icSenderRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/img_right" />

                        <RelativeLayout
                            android:layout_below="@id/txtAddress"
                            android:layout_toEndOf="@+id/rrView"
                            android:id="@+id/rrSwap"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:layout_centerVertical="true"
                                android:id="@+id/view"
                                android:layout_width="match_parent"
                                android:layout_height="2px"
                                android:background="@color/color_EEEEEE_bg"/>



                        </RelativeLayout>

                        <LinearLayout
                            android:layout_toStartOf="@+id/icRecRight"
                            android:layout_toEndOf="@+id/rrView"
                            android:layout_below="@id/rrSwap"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txtRecipientUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend_regular_400"
                                android:text="Home :"
                                android:textColor="@color/color_999999"
                                android:textSize="13sp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txtRecipientAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/lexend_regular_400"
                                android:text="Geb. 571, CargoCity Süd, 60549 Frankfurt am Main, Germany"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <ImageView
                            android:visibility="gone"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/rrSwap"
                            android:id="@+id/icRecRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/img_right" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_regular_400"
                    android:text="Options"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdAddItemDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:padding="15dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lexend_regular_400"
                                    android:text="Size"
                                    android:textColor="@color/color_999999"
                                    android:textSize="14sp" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/txtSize"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lexend_regular_400"
                                    android:text="XL"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/color_EEEEEE_bg"/>

                            <LinearLayout
                                android:padding="15dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lexend_regular_400"
                                    android:text="Weight"
                                    android:textColor="@color/color_999999"
                                    android:textSize="14sp" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/txtWeight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lexend_regular_400"
                                    android:text="10KG"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/color_EEEEEE_bg"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:padding="15dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lexend_regular_400"
                                    android:text="Item Type"
                                    android:textColor="@color/color_999999"
                                    android:textSize="14sp" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/txtItemType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lexend_regular_400"
                                    android:text="Document"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />

                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_regular_400"
                    android:text="By booking this delivery, you agree to our terms &amp; conditions."
                    android:textColor="@color/color_999999"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_marginEnd="10dp"
                    android:id="@+id/cardSelectAddressButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    app:cardBackgroundColor="#EEEEEE"
                    app:cardCornerRadius="17dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:paddingHorizontal="20dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexend_regular_400"
                            android:text="Total"
                            android:textColor="@color/color_999999"
                            android:textSize="15sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexend_regular_400"
                            android:text="$ 197.80"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/crdConfirm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="65dp"
                    app:cardBackgroundColor="@color/color_bf0b32"
                    app:cardCornerRadius="17dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lexend_regular_400"
                        android:text="Confirm"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>