<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7_bg"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="16dp"
    tools:context=".activity.SignupActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/img_arrow_back" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lexend_regular_400"
                android:text="Secure Your Account"
                android:textColor="@color/color_999999"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold_700"
                android:text="Create a Secure Password."
                android:textColor="@color/black"
                android:textSize="28sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lexend_regular_400"
                android:text="Password"
                android:textColor="@color/color_999999"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="17dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/lexend_regular_400"
                    android:hint="Add password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/icPasswordToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_pass_visible" />
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lexend_regular_400"
                android:text="Confirm password"
                android:textColor="@color/color_999999"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="17dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/lexend_regular_400"
                    android:hint="Re-enter password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/icConfirmPasswordToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_pass_visible" />
            </androidx.cardview.widget.CardView>





        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:layout_above="@+id/checkboxPrivacy"
        android:id="@+id/checkbox_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_here_to_indicate_that_you_have_read_and_agree_to_the_terms_conditions"
        android:textSize="14sp"
        android:textColor="@color/color_999999"
        android:fontFamily="@font/lexend_regular_400"
        android:button="@null"
        android:drawableStart="@drawable/img_checkbox"
        android:drawablePadding="10dp"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/cardCreateAccount"
        android:id="@+id/checkboxPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_ve_read_and_accept_also_privacy_policy"
        android:textSize="14sp"
        android:textColor="@color/color_999999"
        android:fontFamily="@font/lexend_regular_400"
        android:button="@null"
        android:drawableStart="@drawable/img_checkbox"
        android:drawablePadding="10dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_alignParentBottom="true"
        android:id="@+id/cardCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/color_bf0b32"
        app:cardCornerRadius="17dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lexend_regular_400"
            android:text="Create account"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>